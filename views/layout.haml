%html
  %head
    %title Linky
    %link{:type => "text/css", :rel => "stylesheet", :href => "/style.css"}/
    %script{:type => 'text/javascript', :src => '/jquery-1.3.2.min.js'}
    %script{:type => 'text/javascript', :src => '/jquery.autocomplete.min.js'}
    %script{:type => 'text/javascript', :src => '/jquery.jeditable.mini.js'}
    %script{:type => 'text/javascript', :src => '/linky.js'}
  %body
    #error
      - if @db_error
        %div.error
          == Error code: #{@db_error.err}
          %br/
          == Error message: #{@db_error.errstr}
          %br/
          == Error state: #{@db_error.state}
    = yield
